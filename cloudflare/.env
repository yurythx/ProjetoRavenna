# =========================================================
# VARIÁVEIS DE AMBIENTE - CLOUDFLARE TUNNEL
# =========================================================
# Configurações do Cloudflare Tunnel para acesso externo seguro
# Serviço: cloudflared
# =========================================================

# Configuração do Cloudflare Tunnel
CLOUDFLARE_TOKEN=SEU_TOKEN_AQUI
CLOUDFLARE_COMMAND=tunnel --no-autoupdate run --token

# Configurações do Container
CLOUDFLARE_IMAGE=cloudflare/cloudflared:latest
CLOUDFLARE_CONTAINER=cloudflare_tunnel

# Configurações de Rede
NETWORK_NAME=app_network

# Configurações de Restart
RESTART_POLICY=always