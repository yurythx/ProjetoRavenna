# ProjetoRavenna - Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Django Backend Configuration
# ============================================

# SECURITY WARNING: keep the secret key used in production secret!
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Set to False in production
DEBUG=False

# ============================================
# Database Configuration
# ============================================

DB_PASSWORD=postgres_secure_password_change_this

# ============================================
# MinIO Object Storage Configuration
# ============================================

USE_MINIO=True
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_secure_password_change_this
MINIO_BUCKET_NAME=projetoravenna
# Domínio público para acessar imagens (adicione ao Cloudflare Tunnel)
MINIO_PUBLIC_DOMAIN=minio.projetoravenna.cloud
# URL interna (usada pelo backend dentro do Docker)
MINIO_ENDPOINT_URL=http://minio:9002
# URL pública completa (para redirecionamentos e CORS)
MINIO_PUBLIC_DOMAIN_URL=https://minio.projetoravenna.cloud

# ============================================
# Gunicorn Configuration (optional)
# ============================================

# Number of worker processes (recommended: 2 x CPU cores + 1)
# Para servidor com 2 CPUs, use 5. Para 4 CPUs, use 9.
GUNICORN_WORKERS=5

# Request timeout in seconds
GUNICORN_TIMEOUT=120

# ============================================
# Cache Configuration (Redis)
# ============================================
# Set to enable Redis cache and throttling
REDIS_URL=redis://redis:6379/1

# ============================================
# Email Configuration
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@projetoravenna.com

# ============================================
# Domain Configuration (optional - defaults in docker-compose.yml)
# ============================================

ALLOWED_HOSTS=api.projetoravenna.cloud,localhost,backend
CORS_ALLOWED_ORIGINS=https://projetoravenna.cloud,https://www.projetoravenna.cloud
CSRF_TRUSTED_ORIGINS=https://api.projetoravenna.cloud,https://projetoravenna.cloud
